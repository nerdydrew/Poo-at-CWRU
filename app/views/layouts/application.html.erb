    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header id="header">
      <nav>
        <h1>
          <%= link_to root_path do %>
            <img src="/images/logo.svg" />Poo at CWRU
          <% end %>
        </h1>

        <ul>
          <% if @logged_in %>
            <li><%= link_to "log out", controller: "application", action: "logout" %></li>
          <% else %>
            <li><%= link_to "log in with Case ID", controller: "application", action: "login" %></li>
          <% end %>

          <li class="genders">
            <form>
              <input type="radio" name="gender" id="male-input" value="male" />
              <label for="male-input" title="View men&rsquo;s restrooms">&#9794;</label>
              /
              <input type="radio" name="gender" id="female-input" value="female">
              <label for="female-input" title="View women&rsquo;s restrooms">&#9792;</label>
              /
              <input type="radio" name="gender" id="all-input" value="all" checked>
              <label for="all-input" title="View all restrooms, regardless of gender">all</label>
            </form>
          </li>
        </ul>
      </nav>

    </header>

    <article>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </article>

    <footer>
  <section>
    <div class="left">
      <p>Shine on, forever, Case Western Reserve.</p>
    </div>
    <div class="right">
      <ul>
        <li><%= link_to "All Buildings", all_buildings_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><a href="mailto:atm62@case.edu">Contact</a></li>
        <li><a href="https://github.com/nerdydrew/Poo-at-CWRU">GitHub</a></li>
      </ul>
    </div>
  </section>
</footer>
